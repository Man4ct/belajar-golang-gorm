{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  }
}
